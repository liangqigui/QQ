<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/person_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.PersonActivity">
    <com.example.liangqg.qq.layout.PersonTitle
        android:id="@+id/persontitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.makeramen.roundedimageview.RoundedImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:id="@+id/person_head"
                app:riv_oval="true"
                app:riv_border_width="2dp"
                app:riv_border_color="#740C5F"
                android:scaleType="fitCenter"
                android:src="@drawable/img1"
                android:layout_centerInParent="true"/>
            <com.makeramen.roundedimageview.RoundedImageView
                android:visibility="invisible"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:id="@+id/person_head_edit"
                app:riv_oval="true"
                app:riv_border_width="2dp"
                app:riv_border_color="#740C5F"
                android:background="@drawable/shape6"
                android:scaleType="fitCenter"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:background="@drawable/relativelayout"
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/person_autograph"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="签名："
                android:textSize="25dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp" />
            <TextView
                android:id="@+id/person_autograph_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="快乐生活每一天"
                android:textSize="20dp"
                android:textColor="#91AAB8"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/person_autograph"/>
            <EditText
                android:id="@+id/person_autograph_edit"
                android:visibility="invisible"
                android:layout_toRightOf="@+id/person_autograph"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="#91AAB8"
                android:background="@drawable/shape5"/>
        </RelativeLayout>
        <RelativeLayout
            android:background="@drawable/relativelayout"
            android:id="@+id/person_n"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/person_name_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="昵称："
                android:textSize="25dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:id="@+id/person_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/person_name_textview"
                android:text="南宫安澜"
                android:textSize="20dp"
                android:textColor="#91AAB8"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"/>
            <EditText
                android:visibility="invisible"
                android:id="@+id/person_name_edit"
                android:layout_toRightOf="@+id/person_name_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="#91AAB8"
                android:background="@drawable/shape5"
                />
        </RelativeLayout>
        <RelativeLayout
            android:background="@drawable/relativelayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/person_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="账号："
                android:textSize="25dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:id="@+id/person_account_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15277335292"
                android:textSize="20dp"
                android:layout_toRightOf="@+id/person_account"
                android:textColor="#91AAB8"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                />
        </RelativeLayout>
        <RelativeLayout
            android:background="@drawable/relativelayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/person_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="性别："
                android:textSize="25dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:id="@+id/person_sex_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/person_sex"
                android:textColor="#91AAB8"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:textSize="20dp"/>

            <RadioGroup
                android:id="@+id/person_sex_radio"
                android:visibility="invisible"
                android:layout_toRightOf="@+id/person_sex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp">
                <RadioButton
                    android:id="@+id/person_sex_man"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="男"/>
                <RadioButton
                    android:id="@+id/person_sex_woman"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="女"/>
            </RadioGroup>
        </RelativeLayout>
        <RelativeLayout
            android:background="@drawable/relativelayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/person_birth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="生日："
                android:textSize="25dp" />
            <TextView
                android:id="@+id/person_birth_text"
                android:layout_toRightOf="@+id/person_birth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#91AAB8"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"/>
            <com.example.liangqg.qq.layout.TimeLayout
                android:visibility="invisible"
                android:id="@+id/person_birth_time"
                android:layout_toRightOf="@+id/person_birth"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </com.example.liangqg.qq.layout.TimeLayout>


        </RelativeLayout>
        <RelativeLayout
            android:background="@drawable/relativelayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/person_hometwon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="家乡："
                android:textSize="25dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:id="@+id/person_hometwon_text"
                android:layout_toRightOf="@+id/person_hometwon"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#91AAB8"    />
            <com.example.liangqg.qq.layout.AddressLayout
                android:visibility="invisible"
                android:id="@+id/person_hometwon_city"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/person_hometwon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </com.example.liangqg.qq.layout.AddressLayout>
        </RelativeLayout>
        <RelativeLayout
            android:background="@drawable/relativelayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/person_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="所在地："
                android:textSize="25dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:id="@+id/person_location_text"
                android:layout_width="wrap_content"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/person_location"
                android:textColor="#91AAB8"/>
            <com.example.liangqg.qq.layout.AddressLayout
                android:visibility="invisible"
                android:id="@+id/person_location_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/person_location"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cenceledit"
                android:text="取消编辑"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:textSize="18dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/shape"/>
            <Button
                android:id="@+id/editbutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="编辑资料"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:textSize="18dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/shape"/>
            <Button
                android:visibility="invisible"
                android:id="@+id/savebutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="保存资料"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:textSize="18dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/shape"/>
        </RelativeLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>