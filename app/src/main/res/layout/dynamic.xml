<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/dynamic_friend_head"
            android:layout_marginLeft="10dp"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/img1"
            app:riv_oval="true"
            app:riv_border_width="1dp"
            app:riv_border_color="#740C5F"
            android:scaleType="fitCenter"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"/>
        <LinearLayout
            android:layout_toRightOf="@+id/dynamic_friend_head"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="桂林电子科技大学表白墙"
                android:textSize="16dp"
                android:textColor="#F50B81"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="今天09:29"/>
        </LinearLayout>
    </RelativeLayout>
<RelativeLayout
    android:layout_marginTop="10dp"
    android:layout_marginLeft="15dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="16dp"
        android:textColor="#000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="生活的要义
就是满怀兴趣的活在这个世界上"/>
</RelativeLayout>
    <GridLayout
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="2"
        android:columnCount="2"
        android:verticalSpacing="3dp"
        android:horizontalSpacing="3dp">
        <ImageView
            android:layout_width="200dp"
            android:layout_height="180dp"
            android:src="@drawable/img001"/>
        <ImageView
            android:layout_width="200dp"
            android:layout_height="180dp"
            android:src="@drawable/img001"/>
        <ImageView
            android:layout_width="200dp"
            android:layout_height="180dp"
            android:src="@drawable/img001"/>
        <ImageView
            android:layout_width="200dp"
            android:layout_height="180dp"
            android:src="@drawable/img001"/>
    </GridLayout>
    <RelativeLayout
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="浏览3089次"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/dynamic_thumb"
                        android:layout_marginRight="15dp"
                        android:layout_toLeftOf="@+id/dynamic_comment"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/thumb"/>
                    <ImageView
                        android:id="@+id/dynamic_comment"
                        android:layout_toLeftOf="@+id/dynamic_share"
                        android:layout_marginRight="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/comment"/>
                    <ImageView
                        android:id="@+id/dynamic_share"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/share"/>
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginTop="3dp"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/thumb1"/>
        <LinearLayout
            android:layout_marginLeft="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="一"
            android:textColor="#1073CD"
            android:textSize="16dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="、"
            android:textColor="#1073CD"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="二"
                android:textColor="#1073CD"
                android:textSize="16dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="、"
                android:textColor="#1073CD"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="三"
                android:textColor="#1073CD"
                android:textSize="16dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="、"
                android:textColor="#1073CD"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="四"
                android:textColor="#1073CD"
                android:textSize="16dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="、"
                android:textColor="#1073CD"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="五"
                android:textColor="#1073CD"
                android:textSize="16dp"/>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </ListView>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/shape3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="评论"/>
    </RelativeLayout>
</LinearLayout>